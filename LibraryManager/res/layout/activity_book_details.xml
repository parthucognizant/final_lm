<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.librarymanager.BookDetailsActivity" >

    <TextView
        android:id="@+id/bookid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/bookcategory_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bookname_view"
        android:layout_alignBottom="@+id/bookname_view"
        android:layout_alignLeft="@+id/bookid_view"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/bookname_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookid_view"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/bookcategory_view"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button1"
        android:layout_width="190dp"
        android:layout_height="38dp"
        android:layout_below="@+id/bookcategory_view"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        android:layout_toRightOf="@+id/bookcategory_view"
        android:background="@drawable/button_background"
        android:onClick="reserve"
        android:text="@string/details_reserve"
        android:textColor="#fff"
        android:textSize="13sp" />

</RelativeLayout>